{
  "name": "cirrus-ci-web",
  "description": "The source that powers https://cirrus-ci.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/cirruslabs/cirrus-ci-web.git"
  },
  "bugs": {
    "url": "https://github.com/cirruslabs/cirrus-ci-docs/issues"
  },
  "homepage": "https://cirrus-ci.com",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "dependencies": {
    "@material-ui/core": "^4.7.2",
    "@material-ui/icons": "^4.5.1",
    "ansi_up": "*",
    "babel-plugin-relay": "*",
    "classnames": "*",
    "graphql": "*",
    "graphql-relay": "*",
    "js-base64": "*",
    "pluralize": "*",
    "prop-types": "*",
    "query-string": "*",
    "react": "*",
    "react-ace": "*",
    "react-dom": "*",
    "react-helmet": "^5.2.1",
    "react-loadable": "*",
    "react-markdown": "*",
    "react-relay": "*",
    "react-router-dom": "*",
    "react-stripe-elements": "*",
    "react-vis": "^1.11.7",
    "recharts": "*"
  },
  "devDependencies": {
    "@types/classnames": "*",
    "@types/jest": "*",
    "@types/js-base64": "*",
    "@types/node": "*",
    "@types/pluralize": "*",
    "@types/react": "*",
    "@types/react-dom": "*",
    "@types/react-helmet": "*",
    "@types/react-relay": "*",
    "@types/react-router-dom": "*",
    "@types/relay-runtime": "*",
    "babel-preset-react-app": "*",
    "get-graphql-schema": "*",
    "husky": "*",
    "lint-staged": "*",
    "prettier": "*",
    "react-scripts": "^3.2.0",
    "relay-compiler": "*",
    "relay-compiler-language-typescript": "*",
    "typescript": "*"
  },
  "scripts": {
    "start": "react-scripts start",
    "start-untyped": "TSC_COMPILE_ON_ERROR=\"true\" react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "prettier": "prettier --write \"{src,public}/**/*.{js,jsx,ts,tsx,json,css,scss,md,html}\"",
    "prettier-check": "prettier --check  \"{src,public}/**/*.{js,jsx,ts,tsx,json,css,scss,md,html}\"",
    "relay": "npx relay-compiler --verbose --watchman false --src ./src --schema schema.graphql --language typescript",
    "sync-schema": "get-graphql-schema https://api.cirrus-ci.com/schema.json | sed -e 's/Long/Int/g' > schema.graphql",
    "bootstrap": "npm run relay && npm run sync-schema"
  },
  "babelMacros": {
    "relay": {}
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,public}/**/*.{js,jsx,ts,tsx,json,css,scss,md,html}": [
      "prettier --write",
      "git add"
    ]
  },
  "browserslist": [
    ">0%",
    "not dead",
    "not op_mini all"
  ]
}
